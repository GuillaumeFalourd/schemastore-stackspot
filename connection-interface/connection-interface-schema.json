{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "schema-version": {
            "type": "string"
        },
        "kind": {
            "type": "string",
            "enum": [
                "connection-interface"
            ]
        },
        "metadata": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
                },
                "display-name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "version": {
                    "type": "string",
                    "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
                },
                "picture": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "description",
                "version"
            ]
        },
        "spec": {
            "outputs": {
                "type": "array",
                "items": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "null",
                            "boolean",
                            "secret",
                            "objecy",
                            "array",
                            "number",
                            "string"
                        ]
                    }
                }
            }
        }
    }
}
