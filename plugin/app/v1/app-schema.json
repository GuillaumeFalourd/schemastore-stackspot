{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "schema-version": {
      "type": "string"
    },
    "kind": {
      "type": "string",
      "enum": [
        "plugin"
      ]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        },
        "display-name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "version": {
          "type": "string",
          "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
        },
        "picture": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "display-name",
        "description",
        "version"
      ]
    },
    "spec": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "app"
          ]
        },
        "compatibility": {
          "type": "array",
          "items": {
              "type": "string"
          }
        },
        "technologies": {
          "type": "array",
          "items": {
              "type": "string"
          }
      },
        "about": {
          "type": "string"
        },
        "implementation": {
          "type": "string"
        },
        "requirements": {
          "type": "string"
        },
        "repository": {
          "type": "string"
        },
        "release-notes": {
          "type": "string"
        },
        "requires": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "plugin": {
                  "type": "string"
                },
                "connection-interface": {
                  "type": "string"
                }
              }
            }
          ]
        },
        "inputs": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "label": {
                  "type": "string"
                },
                "type": {
                  "type": "string",
                  "enum": [
                      "text",
                      "bool",
                      "int",
                      "password",
                      "multiselect",
                      "list"
                    ]
                },
                "name": {
                  "type": "string"
                }
              },
              "required": [
                "label",
                "type",
                "name"
              ]
            }
          ]
        }
      },
      "required": [
        "type"
      ]
    }
  },
  "required": [
    "schema-version",
    "kind",
    "metadata",
    "spec"
  ]
}